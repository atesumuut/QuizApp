<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283591"
    tools:context=".SonucActivity" >

    <ImageView
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gameover1" />

    <TextView
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/yapilanpaun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/bas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yapilanpaun"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="400dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="400dp"
        android:text="En iyi Skor"
        android:textSize="25sp" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/bas"
        android:layout_alignLeft="@+id/bas"
        android:layout_below="@+id/bas"
        android:id="@+id/eniyiskor"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Ana Sayfa"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/home"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>